<?xml version="1.0" encoding="utf-8"?>
<android.support.wearable.view.BoxInsetLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container"
    tools:context="com.podraza.android.habit.sunshinewear.MainActivity"
    tools:deviceIds="wear"
    android:background="@color/blue">

    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/high_view"

        android:layout_marginTop="@dimen/margin_top"
        android:layout_marginLeft="@dimen/high_margin_left"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/low_view"

        android:layout_marginTop="@dimen/margin_top"
        android:layout_marginLeft="@dimen/low_margin_left"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weather_view"
        android:layout_gravity="center_horizontal"

        android:layout_marginTop="@dimen/imageview_margin_top"
        />

</android.support.wearable.view.BoxInsetLayout>
